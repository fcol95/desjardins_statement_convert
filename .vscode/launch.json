{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Convert PDF to CSV (Picker)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/credit_statement_convert_pdf_to_csv.py",
            "console": "integratedTerminal",
            "args": [
                "${input:pdfPath}"
            ],
            "justMyCode": true
        },
        {
            "name": "Debug Tests (Pytest)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_statement.py",
                "--no-header",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "pdfPath",
            "type": "promptString",
            "description": "Enter the path to the PDF statement",
            "default": "tests/ref/################-novembre-2025.pdf"
        }
    ]
}